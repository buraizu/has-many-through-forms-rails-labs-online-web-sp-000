


<h1><%= @post.title %></h1>

<p><%= @post.content %></p>

<ul>
  <% @post.comments.each do |comment| %>
    <li><%= comment.content %></li>
  <% end %>
</ul>

<ul>

  <% users = @post.comments.collect { |c| c.user_id } %>

  <% users.uniq.each do |user| %>

    <li><%= User.find(user).username %></li>

    <li><%= link_to User.find(user).username, user_path(user) %></li>

  <% end %>
</ul>

<%= form_for @comment do |f| %>
  <%= f.label "Comment" %>
  <%= f.text_field :content %>
  <%= f.collection_check_boxes :user_id, User.all, :id, :username %>
  <%= f.submit %>
<% end %>
